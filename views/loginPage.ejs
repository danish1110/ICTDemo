<%- include('./partials/myHeader.ejs') %>

  <section>
    <form method="post" action="/loginform">
      <table class="table table-bordered table-dark w-50 mx-auto mt-5 text-center">
        <thead>
          <tr>
            <th colspan="2">
              Login
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>User ID</td>
            <td><input type="email" name="emailId" placeholder="Enter Email ID" /> </td>
          </tr>

          <tr>
            <td>Password</td>
            <td><input type="password" name="pwd" /> </td>
          </tr>
          <tr>
            <td colspan="2" align="center">
              <input type="submit" name="loginBtn" value="Login" class="btn btn-info" />
            </td>
          </tr>
        </tbody>
      </table>

      <% if(success) { %>
        <p class="alert alert-success w-50 mx-auto">
          <%= message %>
        </p>

        <% } %>


    </form>

  </section>


  <%- include('./partials/myFooter.ejs') %>